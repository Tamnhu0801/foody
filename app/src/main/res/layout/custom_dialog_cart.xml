<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageMonAnCart"
            android:layout_marginRight="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/snowee"
            android:layout_width="55dp"
            android:layout_height="55dp"/>

        <LinearLayout
            android:layout_weight="3"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textTenMonAnCart"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:textStyle="bold"
                android:text="Sữa tươi trân châu đường đen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/textGhiChu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@null"
                android:drawableLeft="@drawable/note_icon"
                android:drawablePadding="5dp"
                android:hint="Ghi chú cho quán"
                android:textColor="@android:color/transparent"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/textGiaCart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Giá"
                android:textColor="@color/red_light"
                android:textSize="16dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_gravity="bottom"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageGiamCart"
                android:layout_gravity="center_vertical"
                android:src="@drawable/subtraction_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/textSoLuong"
                android:padding="10dp"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:text="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/imageThemCart"
                android:layout_gravity="center_vertical"
                android:src="@drawable/add_fill_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey" />


</androidx.cardview.widget.CardView>